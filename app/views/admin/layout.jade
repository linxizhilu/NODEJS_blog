extends ../layout.jade

append css
  link(rel='stylesheet', href='/css/admin.css')
block style1
  style.
    .navbar-inverse{
      background: -webkit-linear-gradient(deepskyblue,dodgerblue)
    }
    .navbar-inverse a {
      color: white !important;
    }
    .navbar-inverse a:hover{
      background: dodgerblue !important;
      color:lightpink !important;
    }

block main
  block head
    .nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')
            span.fa.fa-home.fa-lg
            |&nbsp;NODEJS全栈博客
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href='#')
                i.fa.fa-cog.fa-lg
                |&nbsp;设置
            li
              a(href='#')
                i.fa.fa-unlock.fa-lg
                |&nbsp;注销
            li
              a(href='#')
                i.fa.fa-question-circle.fa-lg
                |&nbsp;帮助
          form.navbar-form.navbar-right
            input.form-control(type='text', placeholder='Search...')
  block content1
    .container-fluid
      .row
        .col-sm-3.col-md-2.sidebar
          block sidebar
            h4.text-left.text-success.font-bold 后台管理导航
            ul.nav.nav-sidebar.admin-sidebar
                li
                  a(href='/admin')
                    i.fa.fa-files-o
                    |&nbsp;查看文章列表
                li
                  a(href='/admin/post/add')
                    i.fa.fa-file
                    |&nbsp;添加文章
                li
                  a(href='/admin/comment')
                    i.fa.fa-comments
                    |&nbsp;查看文章回复
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          block content

